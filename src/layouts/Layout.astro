---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#004FFB] text-white">
		<slot />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}

	html {
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	.download {
		display: flex;
		align-items: center;
	}

	.download li {
		padding: 0 5px;
	}
	.download li img {
		width: 50px;
	}

	
	.app-image {
		width: 300px;
	}

	.main-text {
		display: flex;
		flex-direction: column;
	}

	.download-btns {
		display: flex;
	}

	.download-container {
		background: #fff;
		display: flex;
		align-items: center;
		border-radius: 10px;
		padding: 10px 20px;
		margin-right: 10px;
		width: 150px;
	}

	.download-container > img {
		width: 25px;
		margin-right: 10px;
	}

	.download-container.apple > p {
		color: black;
	}

	a {
		text-decoration: none;
	}
	.center-nav {
		display: flex;
	}
	.center-nav li {
		padding-left: 10px;
	}
	.redes {
		display: flex;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
